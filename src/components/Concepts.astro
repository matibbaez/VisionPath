---
import { getLangFromUrl } from '../utils/i18n';
import { conceptualProjects } from '../data/projects';

const lang = getLangFromUrl(Astro.url);

// Textos dinámicos actualizados sin la palabra "Laboratorio"
const badgeText = lang === 'en' ? "Private Collection" : "Colección Privada";
const title1 = lang === 'en' ? "Premium" : "Diseños";
const title2 = lang === 'en' ? "Layouts." : "Premium.";
const subtitle = lang === 'en' 
    ? "High-speed design explorations ready to be adapted to your firm in 48 hours." 
    : "Arquitecturas de alta velocidad listas para adaptarse a la identidad de tu firma en 48 horas.";
const demoText = lang === 'en' ? "View Live Demo" : "Visitar Demo";

// Textos del Banner CTA
const ctaTitle = lang === 'en' ? "Looking for a different style?" : "¿Buscás otro estilo?";
const ctaDesc = lang === 'en' 
    ? "We have a private catalog with more than 15 additional layouts. Contact us to see more examples tailored for your firm." 
    : "Contamos con un catálogo privado de más de 15 diseños exclusivos. Consultanos para ver más ejemplos que se ajusten a tu estudio.";
const ctaButton = lang === 'en' ? "Consult more options" : "Consultar más opciones";
---

<section id="concepts" class="relative py-24 md:py-32 bg-black">
    <div class="max-w-7xl mx-auto px-6">
        
        <div class="mb-16 md:mb-24">
            <span class="text-[--color-primary] font-mono text-sm tracking-widest uppercase mb-4 block">
                /// {badgeText}
            </span>
            <h2 class="text-4xl md:text-6xl font-bold text-white tracking-tight">
                {title1} <br/>
                <span class="text-glow-pop">{title2}</span>
            </h2>
            <p class="mt-6 text-gray-400 text-lg md:text-xl max-w-2xl leading-relaxed">
                {subtitle}
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 pb-12">
            {conceptualProjects.slice(0, 6).map((project) => (
                <article class="group relative rounded-[2rem] bg-[#0A0A0A] border border-white/10 overflow-hidden shadow-2xl flex flex-col transition-all duration-500 hover:border-[--color-primary]/50 hover:shadow-[0_0_30px_rgba(255,85,0,0.1)]">
                    
                    <div class="relative aspect-[4/3] w-full overflow-hidden border-b border-white/5">
                        <div class="absolute inset-0 bg-black/40 group-hover:bg-transparent transition-colors duration-700 z-10"></div>
                        <img src={project.image} alt={project.title} class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105 grayscale group-hover:grayscale-0" />
                    </div>

                    <div class="p-6 md:p-8 flex-1 flex flex-col relative z-20">
                        <div class="flex items-center gap-3 mb-5">
                            <span class="w-1.5 h-1.5 rounded-full bg-[--color-primary] animate-pulse"></span>
                            <span class="text-xs font-mono text-gray-500 tracking-wider uppercase group-hover:text-white/70 transition-colors">
                                {project.category}
                            </span>
                        </div>
                        
                        <h3 class="text-2xl md:text-3xl font-bold text-white leading-tight tracking-tight mb-6">
                            {project.title}
                        </h3>
                        
                        <div class="mt-auto pt-6 border-t border-white/5 flex flex-col items-start gap-6">
                            <div class="flex flex-wrap gap-2">
                                {project.tech.map(tech => (
                                    <span class="px-3 py-1.5 rounded-full border border-white/10 bg-white/5 text-[11px] font-medium text-gray-300 backdrop-blur-sm tracking-wide uppercase font-mono">
                                        {tech}
                                    </span>
                                ))}
                            </div>
                            
                            {project.demoUrl && (
                                <a href={project.demoUrl} target="_blank" rel="noopener noreferrer" class="group/btn inline-flex items-center gap-3 text-white text-sm font-bold tracking-wide uppercase border-b border-white/20 pb-1 hover:border-[--color-primary] hover:text-[--color-primary] transition-all">
                                    {demoText}
                                    <svg class="w-4 h-4 transition-transform group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                                </a>
                            )}
                        </div>
                    </div>
                </article>
            ))}
        </div>

        <div class="mt-8 relative rounded-[2rem] glass overflow-hidden shadow-2xl p-10 md:p-16 text-center border border-white/10 group">
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[--color-primary] rounded-full blur-[120px] opacity-0 group-hover:opacity-10 transition-opacity duration-1000 pointer-events-none"></div>
            
            <div class="relative z-10 max-w-3xl mx-auto flex flex-col items-center">
                <h3 class="text-3xl md:text-5xl font-bold text-white mb-6 tracking-tight">
                    {ctaTitle}
                </h3>
                <p class="text-gray-400 text-lg md:text-xl mb-12 max-w-2xl leading-relaxed">
                    {ctaDesc}
                </p>
                
                <a href="https://wa.me/5491153464411" target="_blank" id="magnetic-btn-concepts" class="group/mag relative inline-flex items-center justify-center px-10 py-4 text-base md:text-lg font-bold text-black bg-white rounded-full overflow-hidden transition-transform hover:scale-105 active:scale-95 shadow-[0_0_40px_-10px_rgba(255,255,255,0.3)] hover:shadow-[0_0_60px_-10px_rgba(255,85,0,0.5)] w-full sm:w-auto">
                    <div class="absolute inset-0 bg-linear-to-r from-[--color-primary] to-orange-500 opacity-0 group-hover/mag:opacity-100 transition-opacity duration-300 ease-out"></div>
                    
                    <span class="relative z-10 flex items-center gap-3 text-black transition-colors">
                        {ctaButton}
                        <svg class="w-5 h-5 transition-transform group-hover/mag:rotate-12 text-black" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                        </svg>
                    </span>
                </a>
            </div>
        </div>

    </div>
</section>

<script>
    const btnConcepts = document.getElementById('magnetic-btn-concepts');
    if(btnConcepts) {
        btnConcepts.addEventListener('mousemove', (e) => {
            const rect = btnConcepts.getBoundingClientRect();
            const x = e.clientX - rect.left - rect.width / 2;
            const y = e.clientY - rect.top - rect.height / 2;
            btnConcepts.style.transform = `translate(${x * 0.2}px, ${y * 0.2}px) scale(1.05)`;
        });
        btnConcepts.addEventListener('mouseleave', () => {
            btnConcepts.style.transform = 'translate(0px, 0px) scale(1)';
        });
    }
</script>