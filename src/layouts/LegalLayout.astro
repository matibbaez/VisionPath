---
import Layout from './Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | VisionPath Legal`}>
  <Navbar />
  
  <main class="pt-32 pb-24 min-h-screen bg-black">
    <div class="max-w-3xl mx-auto px-6">
      
      <div class="mb-12 border-b border-white/10 pb-8">
        <p class="text-[--color-primary] font-mono text-sm tracking-widest uppercase mb-4">/// LEGAL DOCS</p>
        <h1 class="text-4xl md:text-5xl font-bold text-white tracking-tight">
          {frontmatter.title}
        </h1>
        <p class="text-gray-500 mt-4 text-sm font-mono">
          Última actualización: {frontmatter.date}
        </p>
      </div>

      <article class="legal-content text-gray-300 leading-relaxed space-y-6">
        <slot />
      </article>

    </div>
  </main>

  <Footer />
</Layout>

<style is:global>
  /* Estilos para que el Markdown se vea profesional sin plugins extra */
  .legal-content h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-top: 3rem;
    margin-bottom: 1rem;
  }
  
  .legal-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .legal-content p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .legal-content ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .legal-content li {
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }

  .legal-content strong {
    color: white;
    font-weight: 600;
  }
</style>